<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">
        <EditText
	        android:id="@+id/txtValidCode"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:hint="请输入验证码"
	        android:ems="10" 
	        android:layout_weight="1"
	        android:textAppearance="?android:attr/textAppearanceLarge"/>
	    <ImageView    
	        android:id="@+id/imgValidCode"
	        android:layout_width="140dp"
	        android:layout_height="46dp"
	        android:layout_weight="0"
	        android:scaleType="fitXY"/>    
    </LinearLayout>
    <TextView
        android:id="@+id/txtOutput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="未获得结果"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:layout_weight="0"
	    android:orientation="horizontal"
	    android:gravity="center" 
	    android:layout_gravity="center"
	    android:padding="0dp"
	    android:layout_margin="5dp" >
	    <Button
	        android:id="@+id/btnCheckLatest"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:onClick="onCheckLatestClick"
	        android:layout_weight="1"
	        android:text="@string/check_latest_text" />
	    <Button
	        android:id="@+id/btnCheckAll"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/check_all_text"
	        android:layout_weight="1"
	        android:onClick="onCheckAllClick" />
	</LinearLayout>
</LinearLayout>
